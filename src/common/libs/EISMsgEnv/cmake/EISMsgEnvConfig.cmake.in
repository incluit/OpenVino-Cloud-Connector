get_filename_component(EISMsgEnv_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
include(CMakeFindDependencyMacro)

list(APPEND CMAKE_MODULE_PATH ${EISMsgEnv_CMAKE_DIR})

# NOTE Had to use find_package because find_dependency does not support
# COMPONENTS or MODULE until 3.8.0
find_package(cJSON REQUIRED)

# Include header directories
include_directories(${CJSON_INCLUDE_DIRS})

if(NOT TARGET EISMsgEnv)
    include("${EISMsgEnv_CMAKE_DIR}/EISMsgEnvTargets.cmake")
endif()

set(EISMsgEnv_LIBRARIES EISMsgEnv)
set(EISMsgEnv_INCLUDE ${INSTALL_LIBDIR}/include)
